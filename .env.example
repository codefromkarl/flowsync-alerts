# Shopify App credentials (auto-managed by Shopify CLI)
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=

# Database (Fly.io uses persistent volume)
DATABASE_URL="file:./prisma/dev.sqlite"

# Flow shared secret for internal API authentication (optional but recommended)
# Used by POST /api/flow/tag-removed endpoint
FLOW_SHARED_SECRET=

# Node environment
NODE_ENV=development
